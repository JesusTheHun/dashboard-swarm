{
    "manifest_version": 2,
    "name": "Dashboard swarm",
    "description": "This extension allows to display a set of tab in multiple browser's windows",
    "version": "0.3",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "build/background.js"
        ]
    },
    "content_scripts": [{
        "run_at": "document_idle",
        "matches": ["*://*/*"],
        "include_globs": ["*"],
        "css": ["build/content_script/keyframe.css"],
        "js": ["build/contentScript.js"]
    }],
    "permissions": [
        "background",
        "system.display",
        "activeTab",
        "tabs",
        "storage",
        "http://*/",
        "https://*/"
    ]
}
